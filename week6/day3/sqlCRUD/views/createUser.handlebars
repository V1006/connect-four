<section class="content">
    <h1>Create new user</h1>
    <form action="/admin/users/new" method="POST">
        <div class="forms">
            <p>First Name</p>
            <input
                type="text"
                id="fName"
                name="first_name"
                placeholder="First Name"
                required
            />
        </div>
        <div class="forms">
            <p>Last Name</p>
            <input
                type="text"
                id="lName"
                name="last_name"
                placeholder="Last Name"
                required
            />
        </div>
        <div class="forms">
            <p>E-mail</p>
            <input
                type="text"
                id="Email"
                name="email"
                placeholder="E-mail"
                required
            />
        </div>
        <div class="forms">
            <p>Profile Picture</p>
            <input
                type="text"
                id="profilePicture"
                name="profile_picture_url"
                placeholder="URL"
            />
        </div>
        <div class="buttons">
            <button type="submit">Create user</button>
            <a href="/admin/users">Go Back</a>
        </div>
    </form>

</section>